<h1>ðŸ“„ Data dari Sheet: Provi_spa</h1>
<table id="data"></table>

<div class="footer">Data diambil langsung dari Google Spreadsheet</div>

<script>
const sheetID = "1u7sHZTiuVvw9l1OHethOqi2lGhO-9c09ieN2Rvwye1w"; // ID spreadsheet kamu
const sheetName = "Provi_spa"; // nama sheet
const url = `https://docs.google.com/spreadsheets/d/${sheetID}/gviz/tq?tqx=out:csv&sheet=${sheetName}`;

fetch(url)
  .then(res => res.text())
  .then(csv => {
    const rows = csv.split("\n").map(r => r.split(","));
    const table = document.getElementById("data");

    // buat header
    const thead = document.createElement("thead");
    const trHead = document.createElement("tr");
    rows[0].forEach(h => {
      const th = document.createElement("th");
      th.textContent = h.replace(/(^"|"$)/g, "");
      trHead.appendChild(th);
    });
    thead.appendChild(trHead);
    table.appendChild(thead);

    // isi tabel
    const tbody = document.createElement("tbody");
    rows.slice(1).forEach(r => {
      if (r.join("").trim() === "") return;
      const tr = document.createElement("tr");
      r.forEach(v => {
        const td = document.createElement("td");
        td.textContent = v.replace(/(^"|"$)/g, "");
        tr.appendChild(td);
      });
      tbody.appendChild(tr);
    });
    table.appendChild(tbody);
  })
  .catch(err => {
    document.getElementById("data").innerHTML = `<tr><td>Error: ${err}</td></tr>`;
  });
</script>

</body>
